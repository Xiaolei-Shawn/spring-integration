<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:int="http://www.springframework.org/schema/integration"
	xsi:schemaLocation="http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration-2.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<int:channel id="in" />

	<int:resequencer input-channel="in" output-channel="out"
		message-store="unboundedMessageGroupStore"
		release-strategy="unboundedReleaseStrategy"
		comparator="sequenceComparator"/>

	<bean id="unboundedMessageGroupStore" class="org.springframework.integration.store.UnboundedMessageGroupStore">
		<constructor-arg>
			<bean class="org.springframework.integration.store.SimpleMessageStore"/>
		</constructor-arg>
	</bean>

	<bean id="unboundedReleaseStrategy" class="org.springframework.integration.aggregator.UnboundedSequenceReleaseStrategy">
		<property name="sequenceHeader" value="my.sequence.header"/>
	</bean>

	<bean id="sequenceComparator" class="org.springframework.integration.aggregator.SequenceNumberComparator">
		<constructor-arg value="my.sequence.header"/>
	</bean>

	<int:channel id="out">
		<int:queue/>
	</int:channel>

</beans>
